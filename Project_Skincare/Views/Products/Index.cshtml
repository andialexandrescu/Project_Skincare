<h2 class="text-center">Afisare produse skincare</h2>
<br />
<div class="d-flex justify-content-center">
    <a class="btn btn-outline-success" href="/Categories/Index">Afisare categorii</a> <br /> <!--de definit ruta-->
    <a class="btn btn-outline-success" href="/Products/New">Adauga produs</a> <br /><!--de definit ruta-->
</div>
<br /> @foreach (var product in ViewBag.AllProducts)
{
    <div class="card">
        <div class="card-body">
            <h3 class="card-title alert-success py-3 px-3 rounded-2">@product.Title</h3>
            <div class="card-text">@product.Description</div>
            <div class="d-flex justify-content-between flex-row mt-5">
                <div><i class="bi bi-globe"></i>@product.Category.CategoryName</div>
                <a class="btn btn-success" href="/Products/Show/@product.Id">Afisare produs</a><!--de definit ruta-->
                <span class="alert-success px-1 align-content-center">@product.DateListed</span>
            </div>
        </div>
    </div>
    <br />
    <br />
}